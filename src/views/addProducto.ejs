<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventario Insuco</title>
    <%- include ('partials/head') -%>
</head>

<body>
    <%- include ('partials/nav') -%>
    
    <div class="">
        <div id="App" class="row mx-2 py-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Añadir producto</h4>
                    </div>
                    <form id="product-form" class="card-body">
                        <div class="form-group">
                            <input type="text" id="descripcion" placeholder="Descripción" class="form-control" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="number" id="precio" placeholder="Precio" class="form-control" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="number" id="cantidad" placeholder="Cantidad" class="form-control" min="1" step="1" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="text" id="observacion" placeholder="Observación" class="form-control" autocomplete="off">
                        </div>
                        
                        <div class="form-group">
                            <select class="form-control" id="selectEspecie">
                                <option>Especie</option>
                                <% especies.forEach(function(data) { %>
                                    <option> <%= data %></option>
                                    <% }); %> 
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="form-control" id="selectRubro">
                                    <option>Rubro</option>
                                <% rubros.forEach(function(data) { %>
                                    <option> <%= data %></option>
                                    <% }); %> 
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="form-control" id="selectUbicacion">
                                    <option>Ubicacion</option>
                                <% ubicaciones.forEach(function(data) { %>
                                    <option> <%= data %></option>
                                    <% }); %> 
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="form-control" id="selectPersona">
                                    <option>Encargado</option>
                                <% personas.forEach(function(data) { %>
                                    <option> <%= data %></option>
                                    <% }); %> 
                                </select>
                            </div>
                            
                            <div class="container text-center">
                                <input type="submit" value="Agregar" class="btn btn-primary">
                            </div>
                        </form>
                    </div>

                    
                </div>
            <div class="col-md-8">
                <table id="table" class="table table-responsive text-center">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">Descripción</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Especie</th>
                        <th scope="col">Rubro</th>
                        <th scope="col">Ubicacion</th>
                        <th scope="col">Encargado</th>
                        <th scope="col">Observación</th>
                        <th scope="col">Borrar</th>
                      </tr>
                    </thead>
                    <tbody>

                    </tbody>
                  </table>
                  <div class="container text-center">
                      <button id="enviar" class="btn btn-success">Enviar</button>

                  </div>
            </div>
                
        </div>
        
    </div>



    <!-- FOOTER -->
    <%- include ('partials/footer') -%>
    <!-- JAVASCRIPT CDNS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="js/productos.js"></script>
</body>

</html>